@page
@model ManagementCoronaSystem.WebSite.Pages.Clients.IndexModel
@{
}

<br />
<h2>List of clients</h2>
<a class='btn btn-primary bnt-sn' href='/Clients/Create'>New Client</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Cell PhoneNumber</th>
            <th>Email</th>
            <th>Birth Date</th>
            <th>Positive Date</th>
            <th>Corona Recovery</th>
            <th>Created At</th>
            <th>Action</th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.address</td>
                <td>@item.phoneNumber</td>
                <td>@item.cellPhoneNumber</td>
                <td>@item.email</td>
                <td>@item.birthDate</td>
                <td>@item.positiveDate</td>
                <td>@item.coronaRecovery</td>
                <td>@item.created_at</td>
                <td>
                    <a class='btn btn-primary bnt-sn' href='/Clients/Details?id=@item.id'>Details</a>
                    <a class='btn btn-danger bnt-sn' href='/Clients/Delete?id=@item.id'>Delete</a>

                </td>
                
            </tr>
        }
    </tbody>
</table>
